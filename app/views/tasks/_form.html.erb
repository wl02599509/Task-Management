<div class="w-[500px] mx-auto mb-5">
  <div class="py-10 border-[1px] border-rose-500 rounded-xl">
    <% if task.errors.any? %>
      <div id="errors-message" class="w-fit mx-auto">
        <% task.errors.full_messages.each do |message| %>
          <li><%= t(message) %></li>
        <% end %>
      </div>
    <% end %>
    <%= form_for task do |form| %>
      <div class="w-fit mx-auto">
        <div class="p-5 flex">
          <div class="mr-3 my-auto">
            <%= form.label :title %>
          </div>
          <div class="w-[350px]">
            <%= form.text_field :title, :class => "w-full" %>
          </div>
        </div>
        <div class="p-5 flex">
          <div class="mr-3 my-auto">
            <%= form.label :content %>
          </div>
          <div class="w-[350px]">
            <%= form.rich_text_area :content %>
          </div>
        </div>
        <div class="p-5 flex">
          <div class="mr-3 my-auto">
            <%= form.label :priority %>
          </div>
          <div class="ml-8">
            <%= form.select :priority, [[t('high'), "0"], [t('normal'), "1"], [t('low'), "2"]] %>
          </div>
        </div>
        <div class="p-5 flex">
          <div class="mr-3 my-auto">
            <%= form.label :end_at %>
          </div>
          <div>
            <%= form.date_field :end_at, min: Date.today %>
          </div>
        </div>
        <div class="text-center">
          <%= form.submit t('submit'), :class => "px-[10px] border-[1px] border-black rounded-2xl hover:bg-rose-200" %>
        </div>
      </div>
    <% end %>
  </div>
</div>