<% if task.errors.any? %>
  <div id="errors-message">
  <% task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </div>
<% end %>
<%= form_for task do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :content %>
  <%= form.text_area :content %>
  <%= form.submit t('submit') %>  
<% end %>